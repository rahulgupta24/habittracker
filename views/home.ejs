<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <!-- Importing stylesheet -->
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <!-- Form For Taking Habit List -->
    <div>
        <form class="habit-form" action="/add-habit" method="POST">
            <input type="text" name="habit_name" class="habit-details-input" placeholder="Enter Habit You Want To Create" required>
          
            <button class="button" type="submit"><i class="fas fa-plus"></i></button>
        </form>
    </div>

    <!-- Rendering habits -->
    <div class="render-habits">
        <ul class="list-item">
            <% for (const it of habit_list) { %>
            <li onclick="location.href='/view-habit/?id=<%= it._id %>&user=<%= it.user %>'">
                <div class="habit"> <i class="fas fa-smile-beam"></i> <%= it.habit_name %></div>
                <div class="delete">
                    <a href="/delete-habit/?id=<%= it._id %>">
                        <i class="fas fa-times"></i>
                    </a>
                </div>
            </li>
            <% } %>
        </ul>
    </div>
</body>
</html>
